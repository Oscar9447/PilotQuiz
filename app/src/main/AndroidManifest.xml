<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oscar.pilotquiz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_plane"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_plane"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".QuizActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeScreen"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Results"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name=".UserSignUpActivity"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name=".UserSignInActivity"
            android:screenOrientation="portrait"
            ></activity>


    </application>

</manifest>